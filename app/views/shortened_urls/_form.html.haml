.form-errors
	= flash[:error].values.flatten.to_sentence if flash[:error]

= form_with(model: url, local: true, class: "form") do |f|
	= f.text_field :full_url, class: "form-control form-control-lg"
	= f.submit 'Save', class: "btn btn-primary"

.back-button
	= link_to 'Back', shortened_urls_path, class: "btn btn-secondary back-button"
